@model RegisterViewModel
@{
    ViewBag.AutCss = "css/aut.css";
}
<div class="form-container col-md-6">
    <p class="text-center info-account">Register</p>
    <form method="POST" asp-action="Register">
        <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group form-elements">
            <label class="control-label labels-account" asp-for="Name">Name: </label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group form-elements">
            <label class="control-label labels-account" asp-for="Email">Email: </label>
            <input type="email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group form-elements">
            <label class="control-label labels-account" asp-for="Password">Password: </label>
            <input type="password" class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group form-elements">
            <label class="control-label labels-account" asp-for="PasswordConfirm">Repeat Password: </label>
            <input type="password" class="form-control" asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>
        <div class="btn-group-justified form-elements">
            <input type="button" class="btn btn-success btn-app" value="Log In" onclick="location.href='@Url.Action("Authenticate", "Account")'" />
            <input type="submit" class="btn btn-primary btn-app" id="submit-btn" value="Register" />
        </div>
    </form>
</div>
